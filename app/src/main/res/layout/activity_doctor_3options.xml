<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_doctor_3options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vinaykl.bs2.Doctor_3options">

    <Button
        android:text="Add Availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="66dp"
        android:id="@+id/AddAvailability"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="View Records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AddAvailability"
        android:layout_alignLeft="@+id/AddAvailability"
        android:layout_alignStart="@+id/AddAvailability"
        android:layout_marginTop="114dp"
        android:id="@+id/ViewRecords"
        android:layout_alignRight="@+id/AddAvailability"
        android:layout_alignEnd="@+id/AddAvailability" />

    <Button
        android:text="Sessions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ViewRecords"
        android:layout_alignStart="@+id/ViewRecords"
        android:layout_marginBottom="64dp"
        android:id="@+id/Sessions"
        android:layout_alignRight="@+id/ViewRecords"
        android:layout_alignEnd="@+id/ViewRecords" />
    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
